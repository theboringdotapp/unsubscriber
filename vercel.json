{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/public/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/static/img/favicon.png"
        },
        {
            "src": "/favicon.png",
            "dest": "/public/static/img/favicon.png"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.py"
        }
    ]
}